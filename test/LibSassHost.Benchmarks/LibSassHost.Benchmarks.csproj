<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<Product>LibSass Host: Benchmarks</Product>
		<VersionPrefix>1.2.2</VersionPrefix>
		<TargetFrameworks>net46;netcoreapp2.0</TargetFrameworks>
		<OutputType>Exe</OutputType>
		<TreatWarningsAsErrors>true</TreatWarningsAsErrors>
		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<Import Project="../../build/common.props" />

	<ItemGroup>
		<PackageReference Include="BenchmarkDotNet" Version="0.11.2" />
		<PackageReference Include="LibSassHost.Native.win-x64" Version="1.2.0" />
		<PackageReference Include="LibSassHost.Native.win-x86" Version="1.2.0" />

		<ProjectReference Include="..\..\src\LibSassHost\LibSassHost.csproj" />
	</ItemGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp2.0' ">
		<PackageReference Include="LibSassHost.Native.linux-x64" Version="1.2.0" />
		<PackageReference Include="LibSassHost.Native.osx-x64" Version="1.2.0" />
	</ItemGroup>

</Project>